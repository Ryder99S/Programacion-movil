<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02PG01.Views.BindingPage"
             BackgroundImageSource="image.jpg">
            
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Frame BackgroundColor="#55C896" Padding="24" CornerRadius="0">
                <Label Text="Ingreso de Personas" HorizontalTextAlignment="Center" TextColor="black" FontSize="40"/>
            </Frame>

            <Label Text="Ingrese Nombre:"></Label>
            <Entry x:Name="txtnombre"></Entry>

            <Label Text="Ingrese Apellidos:"></Label>
            <Entry x:Name="txtapellidos"></Entry>

            <Label Text="Ingrese Edad:"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="Ingrese Email:"></Label>
            <Entry x:Name="txtemail" Keyboard="Email"></Entry>

            <Grid HeightRequest="50" WidthRequest="250" HorizontalOptions="Center">
                <Button x:Name="btnbinding" Text="Enviar" Clicked="btnbinding_Clicked" BackgroundColor="#55C896" TextColor="White"></Button>
            </Grid>
                        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>